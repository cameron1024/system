{
  "sticky_scroll": { "enabled": true },

  // "features": {
  //   "edit_prediction_provider": {
  //     "experimental": "sweep",
  //   }
  // },
  "use_on_type_format": false,
  "remove_trailing_whitespace_on_save": false,
  "languages": {
    "Rust": {
      "use_on_type_format": false
    }
  },
  "relative_line_numbers": "enabled",
  "icon_theme": "Colored Zed Icons Theme Dark",
  "audio": {
    "experimental.auto_microphone_volume": true,
    "experimental.rodio_audio": true
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-opus-4-5"
    },
    "model_parameters": []
  },
  "project_panel": {
    "indent_guides": {
      "show": "always"
    }
  },
  "rounded_selection": true,
  "use_smartcase_search": true,
  "collaboration_panel": {
    "dock": "right"
  },
  // "disable_ai": true,
  "edit_predictions": {
    "mode": "subtle"
  },
  "use_system_prompts": true,
  "active_pane_modifiers": {
    "inactive_opacity": 0.7
  },
  "hover_popover_enabled": false,
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "lsp_pull_diagnostics": {
      "enabled": true,
      "debounce_ms": 50
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 50,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "vim_mode": true,
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "terminal": {
    "shell": {
      "program": "fish"
    }
  },
  "use_system_path_prompts": false,

  "format_on_save": "off",

  // "window_decorations": "server",

  // "lsp": {
  //   "rust-analyzer": {
  //     "initialization_options": {
  //       // "checkOnSave": false,
  //       // "check": {
  //       //   "overrideCommand": ["cargo", "build", "--message-format=json"]
  //       // }
  //     }
  //   }
  // },

  /* ============= */
  /* === THEME === */

  "buffer_font_family": "Fira Code",
  "buffer_font_size": 18,
  "buffer_font_features": {
    "calt": true,
    "clig": true
  },
  "ui_font_family": "Josefin Sans",
  "ui_font_size": 18,
  "theme": {
    "mode": "dark",
    "light": "Everforest Dark",
    "dark": "Everforest Dark Hard"
  },
  // lighter green than fallback #193b2d44
  // lighter blue than fallback #11326444
  "experimental.theme_overrides": {
    // "editor.foreground": "#FF0000",
  }

  // "theme": {
  //   "mode": "dark",
  //   "light": "One Light",
  //   "dark": "One Dark"
  // },
}
