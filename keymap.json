// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "ctrl-h": "vim::Left",
      "ctrl-j": "vim::Down",
      "ctrl-k": "vim::Up",
      "ctrl-l": "vim::Right",
      "alt-space": "editor::AcceptEditPrediction",
    }
  },
  {
    "context": "((Editor && (vim_mode == normal || vim_mode == visual)) || !Editor) && !Terminal",
    "bindings": {
      "space n": "file_finder::Toggle",
      "space f": "pane::DeploySearch"
    }
  },
  {
    "context": "(Editor && (vim_mode == normal || vim_mode == visual)) || !Editor",
    "bindings": {
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-o": "pane::GoBack",
      "ctrl-i": "pane::GoForward",
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && !showing_code_actions",
    "bindings": {
      "enter": "editor::SelectLargerSyntaxNode",
      "backspace": "editor::SelectSmallerSyntaxNode",
      "H": "vim::StartOfLineDownward",
      "L": "vim::EndOfLine",
      "ctrl-b": "editor::GoToPreviousDiagnostic",
      "ctrl-n": "editor::GoToDiagnostic",
      "g i": "editor::GoToImplementation",
      "g t": "editor::GoToTypeDefinition",
      "g r r": ["editor::FindAllReferences", { "always_open_multibuffer": false }],
      "space q": "pane::CloseActiveItem",
      "space i": "editor::ToggleInlayHints",
      "ctrl-v": "pane::SplitRight",
      "ctrl-x": "pane::SplitDown",
      "alt-space": "editor::AcceptEditPrediction",
      "space h p": "editor::ExpandAllDiffHunks",
      "space z": "workspace::ToggleZoom",
      "alt-l": "vim::SelectNextSyntaxNode",
      "alt-h": "vim::SelectPreviousSyntaxNode",
      // "]m": "editor::SelectNextMultibufferMatch",
      // "[m": "editor::SelectPreviousMultibufferMatch",
    }
  },
  {
    "context": "(Editor && vim_mode == normal)",
    "bindings": {
      "space p": "project_panel::ToggleFocus",
      "space v": "vim::SwitchToVisualBlockMode"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space p": "workspace::ToggleLeftDock"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-t": "workspace::ToggleBottomDock"
    }
  },
  {
    "context": "!Terminal",
    "bindings": {
      "ctrl-t": "terminal_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && vim_mode == visual",
    "bindings": {
      "S": "vim::PushAddSurrounds"
    }
  },
  {
    "context": "Editor",
    "bindings": {
      "alt-shift-f": "editor::Format"
    }
  }
]
